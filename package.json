{
  "name": "hit-the-target",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "prepare": "husky",
    "watch": "ng build --watch --configuration development",
    "test": "ng test --watch=false",
    "serve:ssr:hit-the-target": "node dist/hit-the-target/server/server.mjs",
    "precommit": "pnpm run lint-fix && pnpm run lint:styles:fix && pnpm run format && pnpm run check-comments && git add .",
    "lint": "eslint ./src --ext .ts,.html",
    "lint-fix": "pnpm run lint --fix",
    "lint:styles:fix": "stylelint \"**/*.scss\" --fix",
    "format": "prettier --write \"src/**/*.{ts,html,scss,css,js,json,md}\"",
    "check-comments": "node src/assets/scripts/check-comments.js"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^18.2.0",
    "@angular/common": "^18.2.0",
    "@angular/compiler": "^18.2.0",
    "@angular/core": "^18.2.0",
    "@angular/forms": "^18.2.0",
    "@angular/platform-browser": "^18.2.0",
    "@angular/platform-browser-dynamic": "^18.2.0",
    "@angular/platform-server": "^18.2.0",
    "@angular/router": "^18.2.0",
    "@angular/ssr": "^18.2.19",
    "express": "^4.18.2",
    "gsap": "^3.13.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.14.10"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^18.2.19",
    "@angular-eslint/eslint-plugin": "^19.6.0",
    "@angular-eslint/eslint-plugin-template": "^19.6.0",
    "@angular-eslint/template-parser": "^19.6.0",
    "@angular/cli": "^18.2.19",
    "@angular/compiler-cli": "^18.2.0",
    "@eslint/js": "^9.26.0",
    "@html-eslint/eslint-plugin": "^0.41.0",
    "@types/express": "^4.17.17",
    "@types/jasmine": "~5.1.0",
    "@types/node": "^18.18.0",
    "@typescript-eslint/eslint-plugin": "^8.32.0",
    "@typescript-eslint/parser": "^8.32.0",
    "eslint": "^9.26.0",
    "eslint-config-prettier": "^10.1.3",
    "eslint-plugin-decorator-position": "^6.0.0",
    "eslint-plugin-prettier": "^5.4.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-unused-imports": "^4.1.4",
    "glob": "^11.0.2",
    "globals": "^16.1.0",
    "husky": "^9.1.7",
    "jasmine-core": "~5.2.0",
    "jasmine-spec-reporter": "^7.0.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "lint-staged": "^15.5.2",
    "prettier": "^3.5.3",
    "stylelint": "^16.19.1",
    "stylelint-config-standard": "^38.0.0",
    "stylelint-scss": "^6.12.0",
    "ts-morph": "^26.0.0",
    "typescript": "~5.5.2",
    "typescript-eslint": "^8.32.0"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{html,scss,css,json}": [
      "prettier --write"
    ]
  }
}
